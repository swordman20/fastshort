{
  "name": "@fastshort/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "imports": {
    "#@/*.js": "./*.js"
  },
  "scripts": {
    "start": "node --watch --trace-warnings app",
    "dev": "node --watch --trace-warnings app",
    "test": "pm2 start pm2/server.test.json",
    "prod": "pm2 start pm2/server.prod.json",
    "//": "update 可以检查依赖包更新",
