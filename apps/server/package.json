    "bignumber.js": "^9.1.1",
    "chalk": "^5.2.0",
    "chinese-random-name": "^2.0.0",
    "dayjs": "^1.11.10",
    "ethers": "^6.0.8",
    "fluent-ffmpeg": "^2.1.2",
    "got": "12.5.3",
    "ipdb": "^0.3.3",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.14.1",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.3.0",
    "koa-joi-router": "^8.0.0",
